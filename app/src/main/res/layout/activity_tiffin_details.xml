<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/tiffinImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tiffinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tiffinDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tiffinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tiffinCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tiffinIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tiffinRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp" />

    <!-- Pricing Options -->
    <TextView
        android:id="@+id/selectPlanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Plan:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/planOptionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/oneTimeMealOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One-Time Meal" />

        <RadioButton
            android:id="@+id/weeklyPlanOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Plan ($100)" />

        <RadioButton
            android:id="@+id/monthlyPlanOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Plan ($320)" />
    </RadioGroup>
    <EditText
        android:id="@+id/specialInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_special_instructions_optional"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_cart"
        android:layout_marginTop="16dp" />
</LinearLayout>
