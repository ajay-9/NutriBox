<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/post_dish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post a Dish"
            android:textSize="24sp"
            android:textColor="@color/purple"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"/>

        <!-- Dish Name Input -->
        <EditText
            android:id="@+id/dish_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dish Name"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/purple_background"
            android:layout_marginBottom="16dp"/>

        <!-- Dish Description Input -->
        <EditText
            android:id="@+id/dish_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dish Description"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:minLines="3"
            android:background="@drawable/purple_background"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/price_edi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/purple_background"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/food"
            android:contentDescription="Dish Image"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/select_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:backgroundTint="@color/purple"
            android:layout_marginTop="8dp"/>


        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_dish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Dish"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
