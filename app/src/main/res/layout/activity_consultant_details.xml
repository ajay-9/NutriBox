<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <!-- Consultant Image -->
        <ImageView
            android:id="@+id/consultantDetailsImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/user1"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Consultant Name -->
        <TextView
            android:id="@+id/consultantDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultant Name"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Consultant Details -->
        <TextView
            android:id="@+id/consultantDetailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultant description and expertise details go here."
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Book Button -->
        <Button
            android:id="@+id/bookConsultantButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
